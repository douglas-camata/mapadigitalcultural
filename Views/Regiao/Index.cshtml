@model IEnumerable<App.Models.Regiao>

@{
    ViewData["Title"] = "Index";
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                Dança
            </th>
            <th>
                Culinária
            </th>
            <th>
                Música
            </th>
            <th>
                Festas
            </th>
            <th>
                Folclore
            </th>
            <th>
                Artesanato
            </th>
            <th>
                Vestimenta
            </th>
            <th>
                Literatura
            </th>
            <th>
                Turismo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <img src="~/img/@Html.DisplayFor(modelItem => item.ImagemDanca)" alt="" style="width: 100px;">
            </td>
            <td>
                <img src="~/img/@Html.DisplayFor(modelItem => item.ImagemCulinaria)" alt="" style="width: 100px;">
            </td>
            <td>
                <img src="~/img/@Html.DisplayFor(modelItem => item.ImagemMusica)" alt="" style="width: 100px;">
            </td>
            <td>
                <img src="~/img/@Html.DisplayFor(modelItem => item.ImagemFestas)" alt="" style="width: 100px;">
            </td>
            <td>
                <img src="~/img/@Html.DisplayFor(modelItem => item.ImagemFolclore)" alt="" style="width: 100px;">
            </td>
            <td>
                <img src="~/img/@Html.DisplayFor(modelItem => item.ImagemArtesanato)" alt="" style="width: 100px;">
            </td>
            <td>
                <img src="~/img/@Html.DisplayFor(modelItem => item.ImagemVestimenta)" alt="" style="width: 100px;">
            </td>
            <td>
                <img src="~/img/@Html.DisplayFor(modelItem => item.ImagemLiteratura)" alt="" style="width: 100px;">
            </td>
            <td>
                <img src="~/img/@Html.DisplayFor(modelItem => item.ImagemTurismo)" alt="" style="width: 100px;">
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdRegiao" class="btn btn-primary">Alterar</a>
            </td>
        </tr>
}
    </tbody>
</table>
